<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.commands.CommandsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarOnOff"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:subtitleTextColor="@color/white"
        app:title="@string/title_on_off"
        app:titleTextColor="@color/white"/>

    <!--BLOCO 1 -->
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/label_pin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarOnOff" />

    <Spinner
        android:id="@+id/spinnerPort1"
        android:layout_width="0dp"
        android:layout_height="48sp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/background_spinner_port"
        android:entries="@array/spinner_portas"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toStartOf="@+id/toggleButton1"
        app:layout_constraintStart_toStartOf="@+id/textView1"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <ToggleButton
        android:id="@+id/toggleButton1"
        style="@android:style/Widget.Material.Button.Toggle"
        android:layout_width="0dp"
        android:layout_height="48sp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/background_toggle_button"
        android:textColor="@color/white"
        android:checked="true"
        android:text="@string/button_on"
        android:textOff="@string/button_off"
        android:textOn="@string/button_on"
        android:theme="@style/Theme.BluetoothCommands"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinnerPort1"
        app:layout_constraintTop_toTopOf="@+id/spinnerPort1" />

    <!--BLOCO 2 -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/label_pin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton1" />

    <Spinner
        android:id="@+id/spinnerPort2"
        android:layout_width="0dp"
        android:layout_height="48sp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/background_spinner_port"
        android:entries="@array/spinner_portas"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toStartOf="@+id/toggleButton2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ToggleButton
        android:id="@+id/toggleButton2"
        style="@android:style/Widget.Material.Button.Toggle"
        android:layout_width="0dp"
        android:layout_height="48sp"
        android:layout_marginEnd="8dp"
        android:checked="true"
        android:text="@string/button_on"
        android:background="@drawable/background_toggle_button"
        android:textColor="@color/white"
        android:textOff="@string/button_off"
        android:textOn="@string/button_on"
        android:theme="@style/Theme.BluetoothCommands"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinnerPort2"
        app:layout_constraintTop_toTopOf="@+id/spinnerPort2"
        tools:text="@string/button_on" />


    <!--BLOCO 3 -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/label_pin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton2" />

    <Spinner
        android:id="@+id/spinnerPort3"
        android:layout_width="0dp"
        android:layout_height="48sp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/background_spinner_port"
        android:entries="@array/spinner_portas"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toStartOf="@+id/toggleButton3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ToggleButton
        android:id="@+id/toggleButton3"
        style="@android:style/Widget.Material.Button.Toggle"
        android:layout_width="0dp"
        android:layout_height="48sp"
        android:layout_marginEnd="8dp"
        android:checked="true"
        android:text="@string/button_on"
        android:background="@drawable/background_toggle_button"
        android:textColor="@color/white"
        android:textOff="@string/button_off"
        android:textOn="@string/button_on"
        android:theme="@style/Theme.BluetoothCommands"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinnerPort3"
        app:layout_constraintTop_toTopOf="@+id/spinnerPort3"
        tools:text="@string/button_on" />



    <!--BLOCO 4 -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/label_pin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton3" />

    <Spinner
        android:id="@+id/spinnerPort4"
        android:layout_width="0dp"
        android:layout_height="48sp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/background_spinner_port"
        android:entries="@array/spinner_portas"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toStartOf="@+id/toggleButton4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ToggleButton
        android:id="@+id/toggleButton4"
        style="@android:style/Widget.Material.Button.Toggle"
        android:layout_width="0dp"
        android:layout_height="48sp"
        android:layout_marginEnd="8dp"
        android:checked="true"
        android:text="@string/button_on"
        android:background="@drawable/background_toggle_button"
        android:textColor="@color/white"
        android:textOff="@string/button_off"
        android:textOn="@string/button_on"
        android:theme="@style/Theme.BluetoothCommands"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinnerPort4"
        app:layout_constraintTop_toTopOf="@+id/spinnerPort4"
        tools:text="@string/button_on" />


</androidx.constraintlayout.widget.ConstraintLayout>