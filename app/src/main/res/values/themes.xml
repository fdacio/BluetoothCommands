<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BluetoothCommands" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryVariant">#1F2020</item>
        <item name="colorOnPrimary">#ffffff</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FF03DAC5</item>
        <item name="colorSecondaryVariant">#FF018786</item>
        <item name="colorOnSecondary">#ffffff</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:actionMenuTextColor">@color/white</item>

    </style>

    <style name="Theme.BluetoothCommands.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/black</item>
        <item name="android:backgroundTint">#000000</item>
        <item name="android:titleTextAppearance">@style/CustomTitle</item>
        <item name="android:subtitleTextAppearance">@style/CustomSubtitle</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CustomSubtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">#FFEB3B</item>
    </style>

</resources>